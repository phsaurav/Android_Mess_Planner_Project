<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RatarGul"
    android:background="#cf000000">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:targetApi="lollipop"
        android:background="#fa9550"
        android:title="Ratargul"
        android:titleTextColor="#e7e7e7"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="70dp">

        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:visibility="visible"
            android:layout_gravity="top"
            >

            <ImageView
                android:id="@+id/ratargul1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="top"
                android:src="@drawable/ratargul_1" />
            <ImageView
                android:id="@+id/ratargul2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/ratargul_2"
                />
            <ImageView
                android:id="@+id/ratargul3"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/ratargul_3"
                />
        </ViewFlipper>


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="330dp" />

    </ScrollView>



</android.support.constraint.ConstraintLayout>