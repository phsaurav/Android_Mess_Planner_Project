<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".insert">

    <Button
        android:id="@+id/remove_button"
        style="@android:style/Widget.Holo.Button.Toggle"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Remove"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/add_button"
        app:layout_constraintTop_toBottomOf="@+id/update_insert" />

    <EditText
        android:id="@+id/update_insert"
        android:layout_width="282dp"
        android:layout_height="59dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:hint="Enter Amount"
        android:inputType="number"
        android:selectAllOnFocus="false"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/remove_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_name" />

    <Button
        android:id="@+id/add_button"
        style="@android:style/Widget.Holo.Button.Toggle"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="23dp"
        android:text="Add"
        app:layout_constraintBottom_toTopOf="@+id/update_back_button"
        app:layout_constraintEnd_toStartOf="@+id/remove_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_insert" />

    <Button
        android:id="@+id/delete_button"
        style="@android:style/Widget.Holo.Light.Button.Small"
        android:layout_width="75dp"
        android:layout_height="34dp"
        android:layout_marginBottom="14dp"
        android:background="@android:color/holo_red_light"
        android:text="DELETE"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/update_back_button"
        style="@android:style/Widget.Holo.Button.Toggle"
        android:layout_width="90dp"
        android:layout_height="41dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="59dp"
        android:text="@string/back_button"
        app:layout_constraintBottom_toTopOf="@+id/delete_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remove_button"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/update_name"
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="260dp"
        android:layout_height="69dp"
        android:layout_marginTop="31dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="36sp"
        android:typeface="normal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:text="Long Press to Delete"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>