<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".insert">

    <EditText
        android:id="@+id/decrease_insert"
        android:layout_width="282dp"
        android:layout_height="59dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="51dp"
        android:ems="10"
        android:hint="Enter Amount"
        android:inputType="number"
        android:selectAllOnFocus="false"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decrease_insert_on" />

    <EditText
        android:id="@+id/decrease_insert_on"
        android:layout_width="282dp"
        android:layout_height="59dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:hint="Spending ON"
        android:inputType="text"
        android:selectAllOnFocus="false"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/decrease_insert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/decrease_button"
        style="@android:style/Widget.Holo.Button.Toggle"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="13dp"
        android:text="Spend"
        app:layout_constraintBottom_toTopOf="@+id/activity_button"
        app:layout_constraintEnd_toStartOf="@+id/decrease_back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decrease_insert" />

    <Button
        android:id="@+id/decrease_back_button"
        style="@android:style/Widget.Holo.Button.Toggle"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="13dp"
        android:text="@string/back_button"
        app:layout_constraintBottom_toTopOf="@+id/activity_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/decrease_button"
        app:layout_constraintTop_toBottomOf="@+id/decrease_insert" />

    <Button
        android:id="@+id/activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="170dp"
        android:text="View Activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>